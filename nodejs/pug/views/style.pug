style.
      body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      }
      .header,
      .footer {
      background-color: #f8f8f8;
      text-align: center;
      padding: 10px 0;
      }
      .menu table {
      width: 100%;
      background-color: #333;
      color: #fff;
      }
      .menu table td {
      text-align: center;
      padding: 10px;
      }
      .menu table a {
      color: white;
      text-decoration: none;
      }
      .menu table a:hover {
      background-color: #575757;
      }
      .content {
      padding: 20px;
      }
      .footer {
      position: fixed;
      bottom: 0;
      width: 100%;
      color: #555;
      }